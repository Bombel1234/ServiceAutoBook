
<MyInputAdd@TextInput>
    on_text:self.text = self.text.upper()
    size_hint_y:None
    height:'50dp'
    background_color:1,1,.9,1
    cursor_color:0,0,0,1
    cursor_width:10
    foreground_color:.17,.17,.17,1
    hint_text_color:1,0,.2,1
    use_bubble:True
    font_size:'16sp'
    multiline: False
    padding_x:['20dp','20dp']
    padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
    bold:1
<AddAuto>
    name:'screen_add_auto'
    MDBoxLayout:
        orientation:'vertical'
        MDTopAppBar:
            id:btn_back
            title:'Screen add auto'
            left_action_items: [["arrow-left", root.back_screen_logo]]
        MDFloatLayout:
            MDBoxLayout:
                adaptive_height:True
                orientation:'vertical'
                pos_hint:{'center_x':.5, 'center_y':.5}
                padding:'30dp', '20dp'
                spacing:'20sp'
                MDLabel:
                    id:lab1
                    adaptive_height:True
                    halign:'center'
                    font_name:'assets/font/lato/Lato-HeavyItalic.ttf'
                    font_size:'40sp'
                    theme_text_color: "Custom"
                    text_color: 1,0,0,1
                MyInputAdd:
                    id:marka
                MyInputAdd:
                    id:model
                MDBoxLayout:
                    adaptive_height:True
                    MDWidget:
                    MDFillRoundFlatIconButton:
                        id:btn_add
                        icon:'plus'
                        theme_width: "Custom"
                        size_hint_x:1
                        line_color: "red"
                        font_size:'20sp'
                        on_release:
                            root.add_auto(marka.text, model.text)
                    MDWidget:
