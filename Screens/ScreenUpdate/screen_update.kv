<ScreenUpdate>
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            id:text_toolbar
            left_action_items:[["arrow-left", root.back_screen_info]]
        ScrollView:
            MDBoxLayout:
                orientation:'vertical'
                padding:'20dp'
                spacing:'40dp'
                adaptive_height:True
                MDGridLayout:
                    cols:2
                    adaptive_height:True
                    MDLabel:
                        id:lab1
                        adaptive_height:True
                        halign:'center'
                        font_size:'30sp'
                    MDTextField:
                        id:km
                        mode:'fill'
                        fill_color_normal:'#8DA399'
                        fill_color_focus:'#838996'
                        text_color_focus: "white"
                        text_color_normal:'white'
                        hint_text:'KM'
                        line_color_normal: "red"

                MDGridLayout:
                    rows:2
                    adaptive_height:True
                    MDBoxLayout:
                        adaptive_height:True
                        padding:0,'20dp', 0, '20dp'
                        MDLabel:
                            id:lab2
                            adaptive_height:True
                            halign:'center'
                            font_size:'30sp'
                    MDBoxLayout:
                        adaptive_height:True
                        MDTextField:
                            id:work
                            mode:'fill'
                            hint_text:'WORK'
                            fill_color_normal:'#8DA399'
                            fill_color_focus:'#838996'
                            text_color_focus: "white"
                            text_color_normal:'white'
                            multiline:True
                MDGridLayout:
                    adaptive_height:True
                    cols:2
                    MDBoxLayout:
                        adaptive_height:True
                        MDLabel:
                            id:lab3
                            adaptive_height:True
                            halign:'center'
                            font_size:'30sp'
                        MDTextField:
                            id:cena
                            mode:'fill'
                            hint_text:'$$$$$'
                            fill_color_normal:'#8DA399'
                            fill_color_focus:'#838996'
                            text_color_focus: "white"
                            text_color_normal:'white'
                MDBoxLayout:
                    adaptive_height:True
                    MDLabel:
                        id:lab4
                        adaptive_height:True
                        halign:'center'
                        font_size:'30sp'
                    MDFillRoundFlatButton:
                        id:value_day
                        size_hint_x:1
                        font_size:'20sp'
                        on_release:root.open_calendar()
                MDBoxLayout:
                    size_hint:1, .2
                    adaptive_height:True
                    AnchorLayout:
                        MDFillRoundFlatButton:
                            id:lab5
                            size_hint_x:.5
                            font_size:'20sp'
                            on_release:root.update_baza(km.text, work.text, cena.text)

