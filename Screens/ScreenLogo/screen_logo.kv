#:import Animation kivy.animation.Animation
#:import os os


<MyInput@TextInput>
    on_text:self.text = self.text.upper()
    size_hint_y:None
    height:'50dp'
    background_color:223/255,100,0.5,0.5
    cursor_color:1,0,0,.5
    cursor_width:10
    foreground_color:.17,.17,.17,1
    hint_text_color:0,0, 1,1
    use_bubble:True
    font_size:'16sp'
    multiline: False
    padding_x:['20dp','20dp']
    padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
    bold:True


<ScreenLogo>
    name:'logo'
    open_drop:True

    MDCard:
        orientation: "vertical"
        padding: 0, '30dp', 0 , "36dp"
        size_hint: .9, .5
        style: "filled"
        color:1,0,0,1
        pos_hint: {"center_x": .5, "center_y": .6}
        MDBoxLayout:
            adaptive_height:True
            padding:'20dp'
            MDLabel:
                id:lab_mark_model
                adaptive_height:True
                halign:'center'
                font_name:'assets/font/lato/Lato-BoldItalic.ttf'
                font_size:'30sp'
        MDBoxLayout:
            adaptive_height:True
            orientation:'vertical'
            spacing:'30sp'
            MDBoxLayout:
                adaptive_height:True
                padding:'20dp',0,'20dp',0
                MyInput:
                    id:marka
            MDBoxLayout:
                adaptive_height:True
                padding:'20dp',0,'20dp',0
                MyInput:
                    id:model
            MDBoxLayout:
                adaptive_height:True
                padding:'30dp',0,'30dp',0
                MDFillRoundFlatIconButton:
                    id:btn1
                    theme_width: "Custom"
                    height: "56dp"
                    size_hint_x: 1
                    font_size:'20sp'
                    on_release:
                        root.open_screen_result()

    MDBoxLayout:
        id:top_box
        adaptive_height:True
        pos_hint:{'center_x':.5, 'center_y':.25}

        AnchorLayout:
            MDTextButton:
                id:btn2
                theme_text_color:'Error'
                font_size:'20sp'
                on_release:
                    app.sm.current = 'add_auto'

    MDBoxLayout:
        id:box1

        adaptive_height:True
        pos_hint:{'center_x':.5, 'center_y':.1}
        FloatLayout:
            id:box2
            MDDropDownItem:
                id:drop
                pos_hint: {"center_x": .4, "center_y": .3}
                font_size:'20sp'
                on_release:
                    root.open_menu()


    RelativeLayout:
        MDIconButton:
            icon:'assets/images/settings.png'
            icon_size:'74sp'
            pos_hint: {'center_x': 0.85, 'center_y': 0.1}
            theme_icon_color: "Custom"
            icon_color: 1,0,0,1
            on_release:app.sm.current = 'screen_settings'


