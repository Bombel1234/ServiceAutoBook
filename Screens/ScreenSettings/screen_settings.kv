<ScreenSettings>
    click_theme:False
    MDBoxLayout:
        id:box_width
        orientation:'vertical'
        MDTopAppBar:
            id:text_toolbar
            left_action_items: [["arrow-left", root.back_screen_logo]]
        MDBoxLayout:
            MDScrollView:
                MDBoxLayout:
                    adaptive_height:True
                    orientation:"vertical"
                    padding:'10dp','50dp', '10dp', 0
                    spacing:'30dp'

################################################
                    MDFloatLayout:
                        adaptive_height:True
                        height:60
                        MDLabel:
                            size_hint_x:1
                            text:'Theme'
                            adaptive_size:True
                            font_size:'20sp'
                            pos_hint:{'center_x':.1, 'center_y':.5}
                        MDLabel:
                            id:light
                            text:'Light'
                            adaptive_size:True
                            pos_hint:{'center_x':.5, 'center_y':.6}
                            theme_text_color:'Custom'
                            font_size:'20sp'
                            bold:True
                        MDSwitch:
                            id:switch_theme
                            pos_hint:{'center_x':.65, 'center_y':.5}
                            on_active:root.theme_select(*args)
                        MDLabel:
                            id:dark
                            text:'Dark'
                            font_size:'20sp'
                            adaptive_size:True
                            pos_hint:{'center_x':.9, 'center_y':.6}
                            theme_text_color:'Custom'
                            bold:True
  ##########################################################################################
                    MDFloatLayout:
                        adaptive_height:True
                        height:60
                        MDLabel:
                            size_hint_x:1
                            text:'Color_hue'
                            adaptive_size:True
                            font_size:'20sp'
                            pos_hint:{'center_x':.15, 'center_y':.5}
                        MDIconButton:
                            icon:'minus'
                            on_release:root.click_minus_hue()
                            pos_hint:{'center_x':.5, 'center_y':.5}
                        MDLabel:
                            id:color_hue
                            adaptive_size:True
                            halign:'center'
                            font_size:'30sp'
                            adaptive_width:True
                            pos_hint:{'center_x':.67, 'center_y':.5}
                        MDIconButton:
                            icon:'plus'
                            pos_hint:{'center_x':.9, 'center_y':.5}
                            on_release:root.click_plus_hue()
                    MDFloatLayout:
                        adaptive_height:True
                        height:60
                        MDLabel:
                            size_hint_x:1
                            text:'Color_primary'
                            adaptive_size:True
                            font_size:'20sp'
                            pos_hint:{'center_x':.2, 'center_y':.5}
                        MDIconButton:
                            icon:'minus'
                            on_release:root.click_minus()
                            pos_hint:{'center_x':.5, 'center_y':.5}
                        MDLabel:
                            id:color_primary
                            adaptive_height:True
                            halign:'center'
                            font_size:'30sp'
                            adaptive_width:True
                            pos_hint:{'center_x':.67, 'center_y':.5}
                        MDIconButton:
                            icon:'plus'
                            pos_hint:{'center_x':.9, 'center_y':.5}
                            on_release:root.click_plus()
                    MDSeparator:
                        color:'red'

                    MDFloatLayout:
                        adaptive_height:True
                        height:60
                        MDLabel:
                            id:lab1
                            size_hint_x:1
                            text:'Language'
                            adaptive_size:True
                            font_size:'25sp'
                            pos_hint:{'center_x':.2, 'center_y':.5}
                        MDLabel:
                            id:label_pl
                            text:'PL'
                            adaptive_size:True
                            font_size:'20sp'
                            pos_hint:{'center_x':.5, 'center_y':.6}
                            theme_text_color:'Custom'
                            bold:True

                        MDSwitch:
                            id:switch_language
                            pos_hint:{'center_x':.65, 'center_y':.5}
                            on_active:root.language_select(*args)
                        MDLabel:
                            id:label_ukr
                            text:'UKR'
                            adaptive_size:True
                            font_size:'20sp'
                            pos_hint:{'center_x':.9, 'center_y':.6}
                            theme_text_color:'Custom'
                            bold:True
                    MDSeparator:
                    MDFloatLayout:
                        adaptive_height:True
                        height:60
                        MDFillRoundFlatIconButton
                            id:btn_delete
                            pos_hint:{'center_x':.5, 'center_y':.5}
                            icon:'trash-can-outline'
                            md_bg_color:'red'
                            size_hint_x:.5
                            font_size:'20sp'
                            on_release:root.click_delete_auto(self)
                    # MDBoxLayout:
                    #     adaptive_height:True
                    #     MDFillRoundFlatIconButton:
                    #         text:'Wybierz photo auta'
                    #         icon:'plus'
                    #         on_release:root.open_closer()
                    


